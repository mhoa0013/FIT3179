{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Donut chart representing the religious affiliation of recent migrants.",
  "width": 400,
  "height": 400,
  "data": {
      "url": "https://raw.githubusercontent.com/mhoa0013/FIT3179/main/Religious%20affiliation%20of%20recent%20migrants(a).csv",
      "format": {
          "type": "csv"
      }
  },
  "mark": {
      "type": "arc",
      "innerRadius": 80
  },
  "encoding": {
      "theta": {
          "field": "Proportion of migrants",
          "type": "quantitative",
          "stack": true
      },
      "color": {
          "field": "Religious affiliation",
          "type": "nominal",
          "legend": {
              "title": "Religious Affiliation"
          }
      },
      "tooltip": [
          {"field": "Religious affiliation", "type": "nominal", "title": "Religion"},
          {"field": "Proportion of migrants", "type": "quantitative", "title": "Proportion (%)"}
      ]
  },
  "view": {
      "stroke": null
  },
  "layer": [
      {
          "mark": {
              "type": "arc",
              "innerRadius": 80
          },
          "encoding": {
              "theta": {
                  "field": "Proportion of migrants",
                  "type": "quantitative",
                  "stack": true
              },
              "color": {
                  "field": "Religious affiliation",
                  "type": "nominal",
                  "legend": {
                      "title": "Religious Affiliation"
                  }
              }
          }
      },
      {
          "mark": {
              "type": "text",
              "fontSize": 16,
              "fontWeight": "bold",
              "fill": "black"
          },
          "encoding": {
              "text": {
                  "value": "Migrants from 2017-2021"
              },
              "x": {
                  "value": 200
              },
              "y": {
                  "value": 200
              }
          }
      }
  ]
}
  